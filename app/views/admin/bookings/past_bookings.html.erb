<div class="main-page-name">
  <h1 class="ifm-paris">Bookings</h1>
  <h1 class="ifm-paris middle-top-bar">Past bookings <%= ": #{@admin_past_bookings_count}" if @admin_past_bookings_count != 0%></h1>
  <%= link_to :back do %>
    <div class="machine-card add-card">
      <p class="add-edit-logo">‚èé</p>
      <p>back</p>
    </div>
  <% end %>
</div>

<div class="main-page-content">
  <h3 class="margin-devise">Today (passed)</h3>
  <div class="booking-cards margin-devise">
    <% unless @admin_past_today_bookings.empty? %>
      <% @admin_past_today_bookings.each do |booking| %>
        <div class="booking-card">
          <div class="booking-times">
            <p>
              <%= Time.zone.local_to_utc(booking.start_time).strftime('üóì %d/%m | ‚è∞ %Hh00') %>
              <%= Time.zone.local_to_utc(booking.end_time).strftime('- %Hh00') %>
            </p>
          </div>
          <div class="booking-machine">
            <h5>
              <%= booking.machine.name %>
            </h5>
            <h6>booked by <%= booking.user.email %> </h6>
          </div>
          <%= link_to "Cancel this booking", booking, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'planning-btn-reverse' %>
        </div>
      <% end %>
    <% else %>
      <div class="booking-card no-booking-card">
        <div class="booking-machine">
          <h5>
            No booking yet !
          </h5>
        </div>
      </div>
    <% end %>
  </div>
  <h3 class="margin-devise">Previous 7 days</h3>
  <div class="booking-cards margin-devise">
    <% @admin_past_bookings.each do |booking| %>
      <div class="booking-card">
        <div class="booking-times">
          <p>
            <%= Time.zone.local_to_utc(booking.start_time).strftime('üóì %d/%m | ‚è∞ %Hh00') %>
            <%= Time.zone.local_to_utc(booking.end_time).strftime('- %Hh00') %>
          </p>
        </div>
        <div class="booking-machine">
          <h5>
            <%= booking.machine.name %>
          </h5>
          <h6>booked by <%= booking.user.email %> </h6>
        </div>
        <%= link_to "Cancel this booking", booking, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'planning-btn-reverse'   %>
      </div>
    <% end %>
  </div>
</div>
