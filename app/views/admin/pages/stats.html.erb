<div class="main-page-name">
  <h1 class="ifm-paris">Stats</h1>
  <h1 class="ifm-paris middle-top-bar"></h1>
  <%= link_to :back do %>
    <div class="machine-card add-card">
      <p class="add-edit-logo">‚èé</p>
      <p>back</p>
    </div>
  <% end %>
</div>

<div class="main-page-content">
  <div class="titleline"><h3><%= Date.today.strftime("%B") %></h3></div>
  <div class="stats-line">
    <div class="stat-box ifm-border-right">
      <h2 class="stat-info"><%= @students_count %></h2>
      <h5>Students</h5>
    </div>
    <div class="stat-box ifm-border-right">
      <h2 class="stat-info"><%= @formations_count %></h2>
      <h5>Formations</h5>
    </div>
    <div class="stat-box">
      <h2 class="stat-info"><%= @bookings_count %></h2>
      <h5>Bookings</h5>
    </div>
  </div>
  <div class="titleline"><h3><%= (Date.today - 1.months).strftime("%B") %></h3></div>
  <div class="stats-line">
    <div class="stat-box ifm-border-right">
      <h2 class="stat-info"><%= @last_month_students_count %></h2>
      <h5>Students</h5>
    </div>
    <div class="stat-box ifm-border-right">
      <h2 class="stat-info"><%= @last_month_formations_count %></h2>
      <h5>Formations</h5>
    </div>
    <div class="stat-box">
      <h2 class="stat-info"><%= @last_month_bookings_count %></h2>
      <h5>Bookings</h5>
    </div>
  </div>
</div>
